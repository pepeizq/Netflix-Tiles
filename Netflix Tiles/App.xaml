<Application
    x:Class="Netflix_Tiles.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Light">

    <Application.Resources>
        <Color x:Key="ColorPrimario">#ac070f</Color>
        <Color x:Key="ColorSecundario">#87050c</Color>
        <Color x:Key="ColorTerciario">#fedcdd</Color>
        <Color x:Key="ColorCuarto">#3b0205</Color>

        <SolidColorBrush x:Key="BrushPrimario" Color="{StaticResource ColorPrimario}"/>
        <SolidColorBrush x:Key="BrushSecundario" Color="{StaticResource ColorSecundario}"/>
        <SolidColorBrush x:Key="BrushTercero" Color="{StaticResource ColorTerciario}"/>
        <SolidColorBrush x:Key="BrushCuarto" Color="{StaticResource ColorCuarto}"/>

        <AcrylicBrush x:Key="AcrilicoFondo" BackgroundSource="HostBackdrop" TintColor="{StaticResource ColorPrimario}" FallbackColor="{StaticResource ColorCuarto}" TintOpacity=".7"/>

        <Color x:Key="ColorCajaRojaFondo">#cd5c5c</Color>
        <Color x:Key="ColorCajaRojaSombra">#6b2121</Color>
        <Color x:Key="ColorCajaRojaBoton">#c84d4d</Color>
        <Color x:Key="ColorCajaRojaBotonHover">#892a2a</Color>
    </Application.Resources>
</Application>
